<domain type='kvm'>
  <name>{{ vm_name }}</name>
  <memory unit='KiB'>{{ memory_in_kib }}</memory>
  <vcpu>{{ num_vcpus }}</vcpu>
  <os>
    <type arch='x86_64' machine='pc'>hvm</type>
  </os>
  <devices>
    <disk type='file' device='disk'>
      <driver name='qemu' type='qcow2'/>
      <source file='{{ disk_path }}'/>
    </disk>
    <interface type='network'>
      <source network='default'/>
    </interface>
  </devices>
</domain>